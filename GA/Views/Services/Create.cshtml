@model GALibrary.Models.Service

@{
    ViewData["Title"] = "Cadastro de serviços";
}

<h1>Cadastro de serviços</h1>

<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control multiLine"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="form-group col-md-6">
                    <label asp-for="ApplicationId" class="control-label"></label>
                    <select asp-for="ApplicationId" class="form-control" asp-items="ViewBag.serviceApplicationId">
                        <option disabled selected></option>
                    </select>
                    <span asp-validation-for="ApplicationId" class="text-danger"></span>
                </div>
                <div class="form-group  col-md-6">
                    <label asp-for="ServerId" class="control-label"></label>
                    <select asp-for="ServerId" class="form-control" asp-items="ViewBag.serviceServerId">
                        <option disabled selected></option>
                    </select>
                    <span asp-validation-for="ServerId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="CommandStart" class="control-label"></label>
                <input asp-for="CommandStart" class="form-control" />
                <span asp-validation-for="CommandStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CommandStop" class="control-label"></label>
                <input asp-for="CommandStop" class="form-control" />
                <span asp-validation-for="CommandStop" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para a lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}




<script type="text/javascript">

    $(document).ready(function () {
        $("#ServerId").select2({
            placeholder: "Selecione um servidor",
            minimumInputLength: 0,
            allowClear: true,
            theme: "bootstrap4"
        });

        $("#ApplicationId").select2({
            placeholder: "Selecione uma aplicação",
            minimumInputLength: 0,
            allowClear: true,
            theme: "bootstrap4"
        });

    });

</script>