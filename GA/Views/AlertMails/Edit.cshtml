@model GALibrary.Models.AlertMail

@{
    ViewData["Title"] = "Edição do e-mail " + @Model.Name;
}

<h1>Edição do e-mail @Model.Name</h1>

<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Default" /> @Html.DisplayNameFor(model => model.Default)
                </label>
                <b>(Selecione esta opção para que este seja o e-mail padrão para envio de comunicados)</b>
                <p>
                    <span asp-validation-for="Default" class="text-danger"></span>
                </p>
            </div>
            <div class="row">
                <div class="form-group col-md-4">
                    <label asp-for="Enable" class="control-label"></label>
                    <select asp-for="Enable" class="form-control" asp-items="ViewBag.AlertMailsEnabled"></select>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div class="row">
    <button class="btn btn-link" onclick="goBack()">
        <span class="fa fa-backward btn btn-success"> Voltar</span>
    </button>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


<script type="text/javascript"></script>