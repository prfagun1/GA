@model GALibrary.Models.DatabaseConnection

@{
    ViewData["Title"] = "Edição da conexão " + @Model.Name;
}

<h1>Edição da conexão @Model.Name</h1>

<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SQLImportCommand" class="control-label"></label>
                <textarea asp-for="SQLImportCommand" class="form-control multiLine"></textarea>
                <span asp-validation-for="SQLImportCommand" class="text-danger"></span>
                <p>
                    *Onde os campos <b>usuarioDeAcesso</b>, <b>senhaDeAcesso</b>, <b>enderecoServidor</b>, <b>nomeBancoDeDados</b> e <b>portaBancoDeDados</b> serão substituídos pelos dados vindos do cadastro de banco de dados.
                </p>
            </div>
            <div class="form-group">
                <label asp-for="Enable" class="control-label"></label>
                <select asp-for="Enable" class="form-control formDateTime" asp-items="ViewBag.DatabaseConnectionEnabled"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-success" onclick="SelectFolder()" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para a lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
