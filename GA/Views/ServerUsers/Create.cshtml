@model GALibrary.Models.ServerUser

@{
    ViewData["Title"] = "Cadastro de usuários de acesso aos servidores";
}

<h1>Cadastro de usuários de acesso aos servidores</h1>
<hr />

<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control multiLine"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="form-group col-md-6">
                    <label asp-for="ServerUsername" class="control-label"></label>
                    <input asp-for="ServerUsername" class="form-control" />
                    <span asp-validation-for="ServerUsername" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="ServerPassword" class="control-label"></label>
                    <input asp-for="ServerPassword" class="form-control" />
                    <span asp-validation-for="ServerPassword" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para a lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
