@model GALibrary.Models.Command

@{
    ViewData["Title"] = "Edição do comando " + @Model.Name;
}

<h1>Edição do comando @Model.Name</h1>

<hr />
<div class="row">
    <div class="col-md-8 create-div">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="form-group col-md-8">
                    <label asp-for="ApplicationId" class="control-label"></label>
                    <select asp-for="ApplicationId" class="form-control" name="ApplicationId" id="commandApplicationId" asp-items="ViewBag.commandApplicationId">
                        <option disabled selected>Selecione uma aplicação </option>
                    </select>
                    <span asp-validation-for="ApplicationId" class="text-danger"></span>
                </div>

                <div class="form-group col-md-4">
                    <label asp-for="Enable" class="control-label"></label>
                    <select asp-for="Enable" class="form-control" asp-items="ViewBag.CommandEnabled"></select>
                </div>
            </div>

            <div class="row">
                <div class="form-group  col-md-8">
                    <label asp-for="ServerId" class="control-label"></label>
                    <select asp-for="ServerId" class="form-control" name="ServerId" id="commandServerId" asp-items="ViewBag.commandServerId">
                        <option disabled selected>Selecione um servidor</option>
                    </select>
                    <span asp-validation-for="ServerId" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="Type" class="control-label"></label>
                    <select asp-for="Type" class="form-control" name="Type" id="type" asp-items="ViewBag.type">
                        <option disabled selected>Selecione o tipo do comando</option>
                    </select>
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="CommandText" class="control-label"></label>
                <textarea asp-for="CommandText" class="form-control multiLine"></textarea>
                <span asp-validation-for="CommandText" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para a lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


<script type="text/javascript">

    $(document).ready(function () {
        $("#commandApplicationId").select2({
            placeholder: "Selecione uma aplicação",
            minimumInputLength: 0,
            allowClear: true,
            theme: "bootstrap4"
        });
    });

    $(document).ready(function () {
        $("#commandServerId").select2({
            placeholder: "Selecione um servidor",
            minimumInputLength: 0,
            allowClear: true,
            theme: "bootstrap4"
        });
    });

</script>