@model GALibrary.Models.Application

@{
    ViewData["Title"] = "Cadastro de aplicações";
}

<h1>Cadastro de aplicações</h1>


<div class="row">
    <div class="col-md-8">
        <hr />
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control multiLine"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EnvironmentId" class="control-label"></label>
                <select asp-for="EnvironmentId" asp-items="ViewBag.EnvironmentId" class="form-control  col-md-4">
                    <option disabled selected>Selecione um ambiente</option>
                </select>
                <span asp-validation-for="EnvironmentId" class="text-danger"></span>
            </div>


            <div class="control-label">Cadastro de diretórios</div>
            <div class="input-group form-group">
                <input class="form-control" id="FolderAdd" />
                &nbsp;
                <input type="button" value="Adicionar" class="btn btn-success listBoxSelectionFormMultilineButtonHeight" onclick="AddItemTextSelect('FolderAdd','FolderList')" />
            </div>

            <div class="input-group form-group">
                <select asp-for="Folder" class="form-control listBoxSelectionFormMultilineHeight" name="FolderList" id="FolderList" asp-items="ViewBag.FolderList"></select>
                &nbsp;
                <input type="button" value="Remover" class="btn btn-success listBoxSelectionFormMultilineButtonHeight" onclick="RemoveItemList('FolderList')" />
            </div>

            <div class="text-danger" id="FoldersError"></div>


            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-success" onclick="SelectAllItens('FolderList')" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para a lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}



<script type="text/javascript"></script>