@model GALibrary.Models.FileDelete

@{
    ViewData["Title"] = "Detalhes de " + Model.Name;
}

<h1>Detalhes de @Model.Name</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Application)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Application.Name)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.FileDeleteFolder)
        </dt>
        <dd class="col-sm-9">
            @foreach (String folder in ViewBag.FolderIDs)
            {
                @folder <br />
            }
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.FilesDirectory)
        </dt>
        <dd class="col-sm-9">
            @Html.Raw(Model.FilesDirectory.Replace(System.Environment.NewLine, "<br/>"))
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Enable)
        </dt>
        <dd class="col-sm-9">
            @{
                String ativo = "Sim";
                if (!Model.Enable) { ativo = "Não"; }
            }

            @ativo &nbsp;
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.User)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Date)
        </dd>
    </dl>
</div>

<div class="row">
    <button class="btn btn-link" onclick="goBack()">
        <span class="fa fa-backward btn btn-success"> Voltar</span>
    </button>
</div>
